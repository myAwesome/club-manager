{% extends 'base.html.twig' %}

{% block body %}
    <h3>{{ championat.getname }} - {{ championat.club }}</h3>

    <div class="row">
        <div class="col-sm-10">
          {{ championat.gettype }} <br>
            {% if championat.getstartAt %}{{ championat.getstartAt|date('Y-m-d H:i:s') }}{% endif %} <br>
            {{ championat.getdescription }} <br>

            {% for player in championat.players %}
                <table class="table">
                    <tbody>
                    <tr>
                        <td>{{ loop.index }}) {{ player.player.lastName |trim }}</td>
                    </tr>
                    </tbody>
                </table>
            {% endfor  %}
        </div>

        <div class="col-sm-2">
            <a class="btn btn-default" href="{{ path('championat_index') }}">Back to the list</a>
            <a class="btn btn-info" href="{{ path('championat_edit', { 'id': championat.getid }) }}">Edit</a>
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>

    </div>

    <hr>

    {{ render(controller('AppBundle:ChampionatHasPlayer:new')) }}

{% endblock %}
