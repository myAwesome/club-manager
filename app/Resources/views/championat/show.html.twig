{% extends 'base.html.twig' %}

{% block body %}
    <h3>Championat</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ championat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ championat.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ championat.type }}</td>
            </tr>
            <tr>
                <th>Startat</th>
                <td>{% if championat.startAt %}{{ championat.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endat</th>
                <td>{% if championat.endAt %}{{ championat.endAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ championat.description }}</td>
            </tr>
        </tbody>
    </table>

<a class="btn btn-default" href="{{ path('championat_index') }}">Back to the list</a>
<a class="btn btn-info" href="{{ path('championat_edit', { 'id': championat.id }) }}">Edit</a>
{{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="Delete">
{{ form_end(delete_form) }}
{% endblock %}
